<%- include('./partials/header') %>
<div class="w-full min-h-screen flex flex-col px-10 py-10 gap-10">
  <% user.cart.forEach(function(product, index) { %>
  <div class="flex w-full gap-10 items-start border rounded-xl p-6 shadow-lg">
    <!-- Left Side -->
    <div class="w-[30%] min-w-[280px] rounded-md overflow-hidden">
      <div
        class="w-full h-80 bg-[<%= product.bgcolor %>] flex justify-center items-center"
      >
        <img
          class="h-[18rem] object-contain"
          src="data:image/jpeg;base64,<%= product.image.toString('base64') %>"
          alt="Product"
        />
      </div>
      <div
        class="w-full flex justify-between px-5 py-4 bg-[<%= product.panelcolor %>]"
      >
        <h3 class="text-2xl"><%= product.name %></h3>
        <div class="flex items-center gap-2">
          <i
            class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-add-line"
          ></i>
          <div class="px-2 py-1 rounded-md bg-white text-black">01</div>
          <i
            class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-subtract-line"
          ></i>
        </div>
      </div>
      <div
        class="flex text-white items-center justify-between px-5 py-3 bg-[<%= product.textcolor %>]"
      >
        <h4 class="text-lg">Net Total</h4>
        <h2 class="text-lg">
          ₹ <%= Number(product.price) + 20 - Number(product.discount) %>
        </h2>
      </div>
    </div>

    <!-- Right Side -->
    <div class="w-[70%]">
      <h3 class="text-xl px-4 mb-4">Price Breakdown</h3>
      <div class="px-5">
        <div class="flex mt-2">
          <h4 class="w-1/3">Total MRP</h4>
          <h4>₹ <%= product.price %></h4>
        </div>
        <div class="flex mt-2">
          <h4 class="w-1/3">Discount on MRP</h4>
          <h4>₹ <%= Number(product.discount) %></h4>
        </div>
        <div class="flex mt-2">
          <h4 class="w-1/3">Platform Fee</h4>
          <h4>₹ 20</h4>
        </div>
        <div class="flex mt-2">
          <h4 class="w-1/3">Shipping Fee</h4>
          <h4>FREE</h4>
        </div>
      </div>
      <!-- <div class="w-full h-[1px] bg-black mt-10"></div> -->
    </div>
  </div>
  <% }) %>

  <!-- Total Amount -->
  <div class="flex mt-5 justify-end pr-10">
    <h3 class="text-xl font-bold text-green-600">
      Total Amount: ₹ <%= bill %>
    </h3>
  </div>
</div>
<%- include('./partials/footer') %>
